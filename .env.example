# API Configuration
API_URL=https://api.whalebyte.com
API_VERSION=v1

# Blockchain Configuration
BLOCKCHAIN_NETWORK=testnet
CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
RPC_URL=https://testnet.infura.io/v3/your-project-id

# Authentication
AUTH_TOKEN_KEY=@whalebyte_auth_token
REFRESH_TOKEN_KEY=@whalebyte_refresh_token

# Content Moderation
AI_MODERATION_API_KEY=your-ai-moderation-api-key
MODERATION_VOTE_THRESHOLD=5
AI_CONFIDENCE_THRESHOLD=0.8

# Feature Flags
ENABLE_AI_MODERATION=true
ENABLE_COMMUNITY_VOTING=true
ENABLE_PUSH_NOTIFICATIONS=true

# Development
DEBUG_MODE=true
MOCK_SERVICES=true
SIMULATE_NETWORK_DELAY=false